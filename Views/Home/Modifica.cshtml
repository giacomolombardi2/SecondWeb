@using Microsoft.EntityFrameworkCore
@model Lombardi.Giacomo._5h.SecondaWeb.Models.Prenotazione;
@{
    ViewData["Title"] = "Modifica";
    Prenotazione p = Model;
    
}
<div class="text-center">
    <h1 class="display-4">Modifica</h1>
    <form class="m-2" method="post" asp-action="Modifica">
            <div class="form-group">
                <label asp-for="Nome">Il tuo nome:</label>
                
                <input asp-for="Nome" class="form-control" value="@p.Nome">
            </div>
            <div class="form-group">
                <label asp-for="Email">La tua Email:</label>
                <input asp-for="Email" class="form-control" value="@p.Email">
            </div>
        <button type="submit" class="btn btn-primary">Modifica</button>
    </form>
</div>
